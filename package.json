{
  "name": "nefol-monorepo",
  "version": "0.1.0",
  "description": "Nefol - A comprehensive e-commerce platform with admin panel, user panel, and backend services",
  "private": true,
  "workspaces": [
    "admin-panel",
    "backend",
    "common",
    "user-panel"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:admin\" \"npm run dev:user\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:admin": "cd admin-panel && npm run dev",
    "dev:user": "cd user-panel && npm run dev",
    "build": "npm run build:backend && npm run build:admin && npm run build:user",
    "build:backend": "cd backend && npm run build",
    "build:admin": "cd admin-panel && npm run build",
    "build:user": "cd user-panel && npm run build",
    "start": "concurrently \"npm run start:backend\" \"npm run preview:admin\" \"npm run preview:user\"",
    "start:backend": "cd backend && npm run start",
    "preview:admin": "cd admin-panel && npm run preview",
    "preview:user": "cd user-panel && npm run preview",
    "test": "npm run test:admin",
    "test:admin": "cd admin-panel && npm run test",
    "test:admin:syntax": "cd admin-panel && npm run test:syntax",
    "test:admin:build": "cd admin-panel && npm run test:build",
    "migrate": "cd backend && npm run migrate",
    "reset-db": "cd backend && npm run reset-db",
    "install:all": "npm install && npm run install:workspaces",
    "install:workspaces": "npm install --workspaces",
    "clean": "npm run clean:node-modules && npm run clean:dist",
    "clean:node-modules": "rm -rf node_modules && rm -rf */node_modules",
    "clean:dist": "rm -rf */dist",
    "lint": "npm run lint:workspaces",
    "lint:workspaces": "npm run lint --workspaces",
    "type-check": "npm run type-check:workspaces",
    "type-check:workspaces": "npm run type-check --workspaces"
  },
  "dependencies": {
    "axios": "^1.12.2"
  },
  "devDependencies": {
    "concurrently": "^9.0.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-username/nefol.git"
  },
  "keywords": [
    "e-commerce",
    "monorepo",
    "react",
    "typescript",
    "express",
    "socket.io",
    "admin-panel",
    "user-panel"
  ],
  "author": "Your Name",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/your-username/nefol/issues"
  },
  "homepage": "https://github.com/your-username/nefol#readme"
}
